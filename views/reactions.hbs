<header class="detailHeader">
  <a href="/prikbord">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 448 512"
    ><!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path
        d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"
      ></path>
    </svg>
  </a>
  <h1>Reacties</h1>
</header>
<section class="prikbord reaction">
  <article>
    <header>
      <img src="/images/{{message.avatar}}" alt="profielfoto" />
      <h3>{{message.user}}</h3>
    </header>
    <h2>{{message.title}}</h2>
    {{#if message.file}}
      <img src="/images/{{message.file}}" alt="img" width="200" height="200" />
    {{/if}}
    <p>{{message.message}}</p>
    <h2>Reacties</h2>
    {{#if message.reactions}}
      <ul class="reactions">
        {{#each message.reactions}}
          <li>
            <img src="/images/{{avatar}}" alt="profielfoto" />
            <article>
              <h3>{{user}}</h3>
              <p>
                {{reaction}}
              </p>
            </article>
          </li>
        {{/each}}
      </ul>
    {{/if}}
    <footer>
      <label class="likes" for="">
        <i class="fa-regular fa-thumbs-up"></i>
        <p>3</p>
      </label>
      <form action="/reactions/{{message._id}}" method="POST">
        <input type="text" name="reaction" id="reaction" />
        <input type="submit" value="Reageer" />
      </form>
    </footer>
  </article>
</section>