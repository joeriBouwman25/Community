<header class="detailHeader">
  <a href="/prikbord">
    <i class="fa-solid fa-arrow-left"></i>
  </a>
  <h1>Reacties</h1>
</header>
<section class="prikbord reaction">
  <article>
    <header>
      <img src="/images/{{message.avatar}}" alt="profielfoto" />
      <h3>{{message.user}}</h3>
    </header>
    <h2>{{message.title}}</h2>
    {{#if message.file}}
      <img src="/images/{{message.file}}" alt="img" width="200" height="200" />
    {{/if}}
    <p>{{message.message}}</p>
    <h2>Reacties</h2>
    {{#if message.reactions}}
      <ul class="reactions">
        {{#each message.reactions}}
          <li>
            <img src="/images/{{avatar}}" alt="profielfoto" />
            <article>
              <h3>{{user}}</h3>
              <p>
                {{reaction}}
              </p>
              {{#if editable}}
                <i id="editable" class="fa-light fa-ellipsis-vertical"></i>
                <nav class="editable hidden">
                  <ul id="edit">
                    <li>
                      <i class="fa-regular fa-pencil"></i>
                      Bewerken
                    </li>
                    <li id="deletePost">
                      <i class="fa-regular fa-trash-can"></i>
                      Verwijderen
                    </li>
                  </ul>
                </nav>
                <dialog class="dialog">
                  <form method="POST" action="/deleteReaction">
                    <h2>Wil je deze reactie verwijderen?</h2>
                    <p>
                      Het verwijderen van een reactie kan niet ongedaan worden
                      gemaakt
                    </p>
                    <div>
                      <button
                        value="cancel"
                        formmethod="dialog"
                      >Annuleren</button>
                      <button
                        name="delete"
                        value="{{../postID}}/{{reactionID}}"
                      >Verwijderen</button>
                    </div>
                  </form>
                </dialog>
              {{/if}}
            </article>
          </li>
        {{/each}}
      </ul>
    {{/if}}
    <footer>
      <label class="likes" for="">
        <i class="fa-regular fa-thumbs-up"></i>
        <p>3</p>
      </label>
      <form action="/reactions/{{message._id}}" method="POST">
        <input type="text" name="reaction" id="reaction" />
        <input type="submit" value="Reageer" />
      </form>
    </footer>
  </article>
</section>