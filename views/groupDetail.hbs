<header class="detailHeader">
  <a href="/groups">
    <svg
      height="20"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 448 512"
    ><!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path
        d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"
      ></path>
    </svg>
  </a>
  <h1>{{group.name}}</h1>
</header>
<main class="groupDetail">
  <section>
    <img src="/images/{{group.image}}" alt="" />
    <article>
      <p>{{group.description}}</p>
      {{!-- <div class="toggle">
        <h3>Notificaties</h3>
        <input type="checkbox" id={{group.name}} />
        <label for={{group.name}}>Toggle</label>
      </div> --}}
    </article>
    {{#if submitted}}
      <form action="">
        <label for="aanmelden">Meld je af van deze groep</label>
        <input id="Afmelden" value="Afmelden" type="submit" />
      </form>
    {{else}}
      <form action="">
        <label for="aanmelden">Word ook lid van deze groep,</label>
        <p>{{group.members}} bewoners gingen je voor</p>
        <input id="aanmelden" value="Aanmelden" type="submit" />
      </form>
    {{/if}}
  </section>
</main>