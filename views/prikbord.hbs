<header>
  <h1>Prikbord</h1>
  <img src="/images/{{user.avatar}}" alt="profielfoto" />
</header>
<main class="prikbord">
  <section>
    <ul>
      {{#each allMessages}}
        <li>
          <article>
            <header>
              <h2>{{title}}</h2>
              <h3>{{user}}</h3>
              <img src="/images/{{avatar}}" alt="profielfoto" />
            </header>
            {{#if file}}
              <img
                src="/images/{{file}}"
                alt="img"
                width="200"
                height="200"
                style="background-image: url(/images/{{file}})"
              />
            {{/if}}
            <p>{{message}}</p>
            <footer>
              <button>Like</button>
              <button>Reageer</button>
              <button>Deel</button>
              {{#if reaction}}
                <form action="/prikbord">
                  <input type="text" placeholder="Schrijf een reactie.." />
                  <input type="submit" value="Verzend" />
                </form>
              {{/if}}
            </footer>
          </article>
        </li>
      {{/each}}
    </ul>
    <a href="/post"><button class="newMessage">+</button></a>
  </section>
  <footer>
    <nav>
      <a href="/">Home</a>
      <a class="activeLink" href="/prikbord">Prikbord</a>
      <a href="/chat">Chat</a>
      <a href="#">Profiel</a>
    </nav>
  </footer>
</main>